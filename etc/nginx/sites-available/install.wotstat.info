server {
  server_name install.wotstat.info;

  location /api {
    proxy_pass http://localhost:9108/api;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  location /mods/ {
    alias /app/install-mods-store/mods/;
    try_files $uri $uri/ =404;
    expires 1y;
    add_header Cache-Control "public, max-age=31536000, immutable";
    add_header 'Access-Control-Allow-Origin' '*' always;
    add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS' always;
    add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
    add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range' always;

    if ($request_method = 'OPTIONS') {
      add_header 'Access-Control-Allow-Origin' '*' always;
      add_header 'Access-Control-Allow-Methods' 'GET, OPTIONS' always;
      add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range' always;
      add_header 'Access-Control-Max-Age' 1728000;
      add_header 'Content-Type' 'text/plain charset=UTF-8';
      add_header 'Content-Length' 0;
      return 204;
    }
  }

  listen 443 ssl;

  ssl_certificate /etc/letsencrypt/live/install.wotstat.info/fullchain.pem; # managed by Certbot
  ssl_certificate_key /etc/letsencrypt/live/install.wotstat.info/privkey.pem; # managed by Certbot
}

server {
  if ($host = install.wotstat.info) {
    return 301 https://$host$request_uri;
  } # managed by Certbot


  server_name install.wotstat.info;
  listen 80;
  return 404; # managed by Certbot
}